{
    "name": "ShanBay Extension",
    "version": "1.0",
    "manifest_version": 2,
    "description": "扇贝收集单词扩展",
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval' ; object-src 'self'",
    "permissions": [
        "http://api.flickr.com/"
    ]
}
